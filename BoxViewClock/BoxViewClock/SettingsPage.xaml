<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoxViewClock.Settings"
             Title="Settings">
  <StackLayout Spacing="10">
    <Label Text="Short"/>
    <Entry Placeholder="Short Format" TextChanged="Short_Changed" MeasureInvalidated="Short_Added"/>
    <Label Text="Long"/>
    <Editor  TextChanged="Long_Changed" MeasureInvalidated="Long_Added"/>
  </StackLayout>
</ContentPage>